<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%= campground.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" name="title" id="title" value="<%= campground.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input class="form-control" type="text" name="price" id="price" value="<%= campground.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Image Url:</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= campground.image %>">  
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" name="description" id="description"><%= campground.description %></textarea>
            </div>
            <button class=" btn btn-success">Update</button>
        </form>
        <a class="btn btn-danger" href="/campgrounds/<%= campground.id %>">Cancel</a>
    </div>
</div>