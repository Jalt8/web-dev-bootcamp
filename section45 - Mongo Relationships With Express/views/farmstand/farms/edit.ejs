<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%= farm.name %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/farms/<%= farm.id %>?_method=PUT" method="POST" novalidate class="validated-form"
                id="form-edit">
                <div class="mb-3">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" name="farm[name]" id="name" value="<%= farm.name %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a name.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="city">City:</label>
                    <input class="form-control" type="text" name="farm[city]" id="city"
                        value="<%= farm.city %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a city.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email:</label>
                    <input class="form-control" type="text" name="farm[email]" id="email" value="<%= farm.email %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide an email.
                    </div>
                </div>
            </form>
            <div class="card-body">
                <button class=" btn btn-success" form="form-edit">Update</button>
                <a class="btn btn-danger" href="/farms/<%= farm.id %>">Cancel</a>
            </div>
        </div>
    </div>