<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Farm</h1>
    <div class="col-6 offset-3">
        <form action="/farms" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name">Name:</label>
                <input class="form-control" type="text" name="farm[name]" id="name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a name.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="city">City:</label>
                <input class="form-control" type="text" name="farm[city]" id="city" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a city.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="text" name="farm[email]" id="email" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide an email.
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>